<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_main_fragment">

    <!-- global action -->
    <action
        android:id="@+id/action_global_snack_dialog"
        app:destination="@id/nav_dialog_fragment" />

    <dialog
        android:id="@+id/nav_dialog_fragment"
        android:name="lishui.example.app.ui.SnackDialogFragment" />

    <fragment
        android:id="@+id/nav_main_fragment"
        android:name="lishui.example.app.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main_layout">

        <!-- popUpToInclusive="true"时，从堆栈中移除非popUpTo的destination -->
        <action
            android:id="@+id/action_mainFragment_to_cameraFragment"
            app:destination="@id/nav_camera_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/nav_camera_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_mainFragment_to_messagingFragment"
            app:destination="@id/nav_messaging_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/nav_messaging_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/nav_search_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/nav_search_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_camera_fragment"
        android:name="lishui.example.app.camera.CameraFragment"
        android:label="CameraFragment"
        tools:layout="@layout/fragment_camera_layout">
        <!--        <action-->
        <!--            android:id="@+id/action_pop_up_to_main_fragment"-->
        <!--            app:destination="@id/nav_main_fragment"-->
        <!--            app:popUpTo="@id/nav_main_fragment"-->
        <!--            app:popUpToInclusive="true" />-->
    </fragment>


    <fragment
        android:id="@+id/nav_messaging_fragment"
        android:name="lishui.example.app.messaging.MessagingFragment"
        android:label="MessagingFragment"
        tools:layout="@layout/fragment_messaging_layout" />

    <fragment
        android:id="@+id/nav_search_fragment"
        android:name="lishui.example.app.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search_layout" />

</navigation>

<resources>

   <!-- <style name="AppToolBar">
        <item name="menu">@menu/app_menu</item>
    </style>-->

    <style name="ButtonMenuStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:textSize">@dimen/demo_text_size_14dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/demo_text_primary</item>
        <item name="android:visibility">visible</item>
        <!--<item name="android:background">@color/demo_bg_button_secondary</item>-->
    </style>

<!-- SnackDialog begin -->
    <style name="Animation.Snack.Dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/snack_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/snack_dialog_exit</item>
    </style>

    <style name="SnackDialog">
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@drawable/snack_dialog_title_default_shape</item>
        <item name="android:topBright">@drawable/snack_dialog_title_default_shape</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextAppearance.Widget.Button.Snack" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/snack_dialog_accent_primary_color</item>
    </style>

    <style name="Button.ButtonBar.SnackDialog" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:minWidth">@dimen/snack_dialog_button_bar_width</item>
        <item name="android:minHeight">@dimen/snack_dialog_button_bar_height</item>
        <item name="android:background">@drawable/snack_dialog_btn_bg_ripple</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button.Snack</item>
    </style>
<!-- SnackDialog end -->


</resources>
<?xml version="1.0" encoding="utf-8"?>
<lishui.example.app.messaging.ConversationListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/demo_padding_size_16dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/default_item_icon_size"
        android:layout_height="@dimen/default_item_icon_size"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingStart="@dimen/demo_padding_size_10dp"
        android:paddingEnd="@dimen/demo_padding_size_10dp"
        android:textColor="@color/demo_text_primary"
        android:textSize="@dimen/demo_text_size_16dp" />

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/demo_margin_size_16dp" />

    <TextView
        android:id="@+id/tv_snippet"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/tv_name"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/iv_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/demo_padding_size_10dp"
        android:paddingEnd="@dimen/demo_padding_size_10dp"
        android:textColor="@color/demo_text_secondary"
        android:textSize="@dimen/demo_text_size_14dp" />

</lishui.example.app.messaging.ConversationListItemView>
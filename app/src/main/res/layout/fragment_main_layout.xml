<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/btn_messaging_fragment"
        style="@style/ButtonMenuStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MessagingFragment"
        app:layout_constraintBottom_toTopOf="@id/btn_camera_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_camera_fragment"
        style="@style/ButtonMenuStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CameraFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_messaging_fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_video_fragment"/>

    <Button
        android:id="@+id/btn_video_fragment"
        style="@style/ButtonMenuStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ExoPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_camera_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>